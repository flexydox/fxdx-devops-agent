{
  "name": "@flexydox/fxdx-devops-agent",
  "description": "Various GitHub Actions for DevOps workflows.",
  "version": "1.0.26",
  "author": "",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/flexydox/fxdx-devops-agent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flexydox/fxdx-devops-agent.git"
  },
  "bugs": {
    "url": "https://github.com/flexydox/fxdx-devops-agent/issues"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.cjs"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run lint && npm run package",
    "test": "jest --config jest.config.js"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@slack/web-api": "^7.10.0",
    "js-yaml": "^4.1.0",
    "md-to-adf": "^0.6.4",
    "openai": "^4.97.0",
    "semver-parser": "^4.1.8",
    "transliteration": "^2.3.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@github/local-action": "^3.2.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.32",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^30.0.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.1",
    "rollup": "^4.40.1",
    "ts-jest": "^29.4.0",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
